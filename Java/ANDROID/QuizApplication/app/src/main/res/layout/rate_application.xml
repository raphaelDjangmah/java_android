<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
   >

    <RatingBar
        android:id="@+id/rateApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:numStars="5"
        android:progressTint="@color/seaBlue"
        android:stepSize="1" />

    <TextView
        android:layout_margin="10dp"
        android:id="@+id/rateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rateApp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/mom"
        android:text=""
        android:textColor="@color/forest_green"
        android:textSize="23sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_below="@id/rateText"
        android:hint="Review"
        android:textSize="26dp"
        android:layout_marginVertical="10dp"
        android:textColor="@color/black"
        android:fontFamily="@font/mercy"
        android:id="@+id/reviewInput"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_below="@id/reviewInput"
        android:text="Submit"
        android:layout_centerHorizontal="true"
        android:background="@color/blue"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:onClick="rateApp"
        android:fontFamily="@font/mom"
        />


</RelativeLayout>