<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


        <ImageView
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:src="@mipmap/fufu_3"
            android:padding="5dp"
            android:id="@+id/onclick_image"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price : GHS "
            android:textSize="20sp"
            android:id="@+id/onclick_price"
            android:paddingHorizontal="20dp"
            android:fontFamily="@font/copse_bold"
            android:textColor="@color/black"
            android:layout_marginTop="0dp"
            android:layout_gravity="center"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Make Order"
            android:background="@color/blue_black"
            android:fontFamily="@font/fondamento_bold"
            android:textColor="@color/white"
            android:padding="10dp"
            android:textSize="30sp"
            android:textAllCaps="false"
            android:id="@+id/onclick_order"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/grid_layout_compliment"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:textColor="@color/green"
            android:fontFamily="@font/mom"
            android:id="@+id/onclick_news"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Click To Rate and Review Our Service"
            android:fontFamily="@font/paytone_italics"
            android:background="@color/white"
            android:padding="1dp"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:textColor="@color/red"
            android:id="@+id/onclick_rate"

            />

    </LinearLayout>

</ScrollView>